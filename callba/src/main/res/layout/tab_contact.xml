<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_contact_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/tab_contact_ll"
    android:background="@color/background"
    android:orientation="vertical">
    <include layout="@layout/toolbar_padding"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dailtop"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/ibn_contact_backup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/bn_bg_selector"
            android:minHeight="38.0dip"
            android:minWidth="52.0dip"
            android:src="@drawable/icon_net_contact"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/contact"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text" />

        <ImageButton
            android:id="@+id/ibn_contact_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/bn_bg_selector"
            android:minHeight="38.0dip"
            android:minWidth="52.0dip"
            android:src="@drawable/icon_contact"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <EditText
            android:id="@+id/et_contact_search"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/contact_search_bg"
            android:drawableLeft="@drawable/search_icon" />

        <ListView
            android:id="@+id/lv_contact_contacts"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_contact_search"
            android:divider="@drawable/line"
            android:dividerHeight="1.0px"
            android:drawSelectorOnTop="false"
            android:fadingEdge="none"
            android:fastScrollEnabled="false"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none" 
            android:cacheColorHint="@android:color/transparent"/>
        
        <com.callba.phone.view.QuickSearchBar
	         android:id="@+id/qsb_contact"
	         android:layout_width="fill_parent"
	         android:layout_height="fill_parent">
	  	</com.callba.phone.view.QuickSearchBar>
    </RelativeLayout>
</LinearLayout>