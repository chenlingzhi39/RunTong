<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:orientation="horizontal" >
    
	<TextView
	    android:id="@+id/tv_subaccount_accinfo"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:gravity="center_vertical"
	    android:layout_weight="1"
	    android:textColor="@color/black_4f"
	    android:textSize="15sp" />
	<TextView
	    android:id="@+id/tv_subaccount_delete"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@android:color/transparent"
	    android:clickable="true"
	    android:padding="7dp"
	    android:textSize="15sp"
	    android:text="@string/sacc_delete"
	    android:textColor="#4e9fdd" />
	<TextView
	    android:id="@+id/tv_subaccount_chagepass"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@android:color/transparent"
	    android:padding="7dp"
	    android:textSize="15sp"
	    android:clickable="true"
	    android:text="@string/modify_pwd"
	    android:textColor="#4e9fdd" />
</LinearLayout>
