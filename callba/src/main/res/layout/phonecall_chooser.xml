<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="@dimen/top_title_bar_height"
	    android:background="@color/bn_press_nor"
	    android:gravity="center_vertical" >
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20dp"
	        android:textSize="24sp"
	        android:typeface="monospace"
	        android:textColor="#319BC2"
	        android:text="@string/call_choose_title" />
	</LinearLayout>
	
	<View
	    android:layout_width="fill_parent"
	    android:layout_height="2dp"
	    android:background="#20A2D2" />
	
	<LinearLayout
	    android:id="@+id/ll_call_callda"
	    android:clickable="true"
	    android:layout_width="fill_parent"
	    android:layout_height="@dimen/top_menu_bar_height"
	    android:gravity="center_vertical"
	    android:background="@drawable/bn_call_chooser_selector" >
	    
	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15dp"
	        android:src="@drawable/callda" />
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:textSize="18sp"
	        android:textColor="#EFEFEF"
	        android:text="@string/call_choose_callda" />
	</LinearLayout>
	
	<View
	    android:layout_width="fill_parent"
	    android:layout_height="2dp"
	    android:background="#3C3C3C" />
	
	<LinearLayout
	    android:id="@+id/ll_call_phone"
	    android:clickable="true"
	    android:layout_width="fill_parent"
	    android:layout_height="@dimen/top_menu_bar_height"
	    android:gravity="center_vertical"
	    android:background="@drawable/bn_call_chooser_selector" >
	    
	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15dp"
	        android:src="@drawable/icon_phonecall" />
	    	
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:textSize="18sp"
	        android:textColor="#EFEFEF"
	        android:text="@string/call_choose_phone" />
	</LinearLayout>
	
	<View
	    android:layout_width="fill_parent"
	    android:layout_height="2dp"
	    android:background="#3C3C3C" />
	
	<LinearLayout
	    android:id="@+id/ll_call_cancel"
	    android:clickable="true"
	    android:layout_width="fill_parent"
	    android:layout_height="@dimen/top_menu_bar_height"
	    android:gravity="center"
	    android:background="@drawable/bn_call_chooser_selector" >
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="18sp"
	        android:textColor="#EFEFEF"
	        android:text="@string/cancel" />
	</LinearLayout>
</LinearLayout>
