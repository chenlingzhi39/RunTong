<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    android:id="@+id/rootFirstPage"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription"
    tools:background="@android:color/holo_orange_dark">
    <ImageView
        android:id="@+id/ivFirstImage"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/s_0_0"
        app:layout_marginTopPercent="20%"
        app:layout_heightPercent="45%"
        app:layout_widthPercent="50%"/>
    <ImageView
        android:id="@+id/ivSecondImage"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/s_0_1"

        app:layout_heightPercent="15%"
        app:layout_marginTopPercent="18%"
        app:layout_marginLeftPercent="45%"
        app:layout_widthPercent="15%"
        />
    <ImageView
        android:id="@+id/ivThirdImage"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/s_0_2"

        app:layout_heightPercent="12%"
        app:layout_marginTopPercent="28%"
        app:layout_marginLeftPercent="25%"
        app:layout_widthPercent="12%"
        />
    <ImageView
        android:id="@+id/ivFourthImage"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/s_0_3"

        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="36%"
        app:layout_marginLeftPercent="40%"
        app:layout_widthPercent="7%"
        />
    <ImageView
        android:id="@+id/ivFifthImage"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/s_0_4"

        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="32%"
        app:layout_marginLeftPercent="50%"
        app:layout_widthPercent="10%"
        />
    <ImageView
        android:id="@+id/ivSixthImage"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/s_0_5"

        app:layout_heightPercent="12%"
        app:layout_marginTopPercent="32%"
        app:layout_marginLeftPercent="65%"
        app:layout_widthPercent="12%"
        />
    <ImageView
        android:id="@+id/ivSeventhImage"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/s_0_6"

        app:layout_heightPercent="12%"
        app:layout_marginTopPercent="41%"
        app:layout_marginLeftPercent="35%"
        app:layout_widthPercent="12%"
        />
    <ImageView
        android:id="@+id/ivEighthImage"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/s_0_7"

        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="46%"
        app:layout_marginLeftPercent="55%"
        app:layout_widthPercent="10%"
        />
    <ImageView
        android:id="@+id/ivNinthImage"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/s_0_8"

        app:layout_marginTopPercent="60%"

        />
</android.support.percent.PercentRelativeLayout>