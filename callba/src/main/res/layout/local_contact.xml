<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_contact_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/tab_contact_ll"
    android:background="@color/background"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <EditText
            android:id="@+id/et_contact_search"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/contact_search_bg"
            android:drawableLeft="@drawable/search_icon" />

        <ListView
            android:id="@+id/lv_contact_contacts"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_contact_search"
            android:divider="@drawable/line"
            android:dividerHeight="1.0px"
            android:drawSelectorOnTop="false"
            android:fadingEdge="none"
            android:fastScrollEnabled="false"
            android:scrollbars="none"
            android:cacheColorHint="@android:color/transparent"/>

        <com.callba.phone.view.QuickSearchBar
            android:id="@+id/qsb_contact"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        </com.callba.phone.view.QuickSearchBar>
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            />
    </RelativeLayout>
</LinearLayout>