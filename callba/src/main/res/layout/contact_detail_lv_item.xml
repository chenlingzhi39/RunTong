<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_square_bg"
    android:padding="8dp"
    android:orientation="horizontal" >
    
	<ImageView
	    android:id="@+id/iv_phonelist_call"
	    android:layout_width="30dp"
	    android:layout_height="30dp"
	    android:layout_marginLeft="5dp"
	    android:src="@drawable/phone_list_call"
	    android:background="@drawable/shape_square_bg" />
	<TextView
	    android:id="@+id/tv_phonelist_number"
	    android:layout_width="0dp"
	    android:layout_height="fill_parent"
	    android:layout_weight="1"
	    android:layout_marginLeft="10dp"
	    android:gravity="center_vertical"
	    android:clickable="true"
	    android:textSize="16sp"
	    android:textColor="@color/black_3f" />
	<!-- <ImageView
	    android:id="@+id/iv_phonelist_sms"
	    android:layout_width="52px"
	    android:layout_height="52px"
	    android:clickable="true"
	    android:layout_marginRight="5dp"
	    android:src="@drawable/phone_list_sms"
	    android:background="@drawable/shape_square_bg" /> -->
</LinearLayout>
