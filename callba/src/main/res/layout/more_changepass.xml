<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_d8"
    android:orientation="vertical" >
    
	<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dailtop" >

        <Button
            android:id="@+id/bn_changepass_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/bn_bg_selector"
            android:text="@string/modify"
            android:textColor="@color/white" />
        
        <Button
            android:id="@+id/bn_changepass_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/bn_bg_selector"
            android:text="@string/login_back"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/modify_pwd"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/title_text" />
    </RelativeLayout>
    
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="15dp"
	    android:orientation="horizontal" >
	    
	    <TextView
	         android:id="@+id/tv_account_all"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="15sp"
		    android:text="@string/xgdzh"
		    android:textColor="@color/black_3f" />
	    <TextView
	        android:id="@+id/tv_account"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:textSize="15sp"
		    android:textColor="@color/black_3f" />
	</LinearLayout>
	
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_square_bg"
        android:orientation="vertical"
         >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/jmm"
                android:textColor="#95C3F4"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_changepass_old"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@drawable/shape_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textColor="#95C3F4"
                android:text="@string/xmm"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_changepass_new"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@android:color/transparent"
                android:inputType="textPassword"
                android:padding="5dp"
                android:textSize="16sp" />
        </LinearLayout>
        
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@drawable/shape_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textColor="#95C3F4"
                android:text="@string/qrxmm"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_changepass_confirm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@android:color/transparent"
                android:inputType="textPassword"
                android:padding="5dp"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
    
</LinearLayout>