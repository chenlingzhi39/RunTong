<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

   <include layout="@layout/toolbar"/>

    <com.callba.phone.view.CornerListView
        android:id="@+id/more_list_share"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_square_bg"
        android:cacheColorHint="@null"
        android:divider="@drawable/aa"
        android:listSelector="@android:color/transparent" >
    </com.callba.phone.view.CornerListView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="10" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/share_info1"
            android:textColor="@color/black_5f"
            android:textSize="15sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:text="@string/share_info2"
            android:textColor="@color/black_5f"
            android:textSize="15sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:text="@string/share_info3"
            android:textColor="@color/black_5f"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>